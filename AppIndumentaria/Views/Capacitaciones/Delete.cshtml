@model AppIndumentaria.Models.Capacitacion

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Eliminar Capacitación</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Está seguro de que desea eliminar esta capacitación?</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-3">Título</dt>
                        <dd class="col-sm-9">@Model.Titulo</dd>

                        <dt class="col-sm-3">Descripción</dt>
                        <dd class="col-sm-9">@Model.Descripcion</dd>

                        <dt class="col-sm-3">Fecha</dt>
                        <dd class="col-sm-9">@Model.Fecha.ToShortDateString()</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="CapacitacionID" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver al Listado</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

