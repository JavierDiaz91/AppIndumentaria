@model AppIndumentaria.Models.EntregaIndumentaria

@{
    ViewData["Title"] = "Detalles de Entrega de Indumentaria";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Detalles de Entrega de Indumentaria</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Empleado</dt>
                        <dd class="col-sm-8">@Model.Empleado?.Nombre @Model.Empleado?.Apellido</dd>

                        <dt class="col-sm-3">Indumentaria</dt>
                        <dd class="col-sm-9">@Model.Indumentaria?.Nombre (Talle: @Model.Talle?.Nombre)</dd> <!-- Mostrar el Talle -->

                        <dt class="col-sm-4">Fecha de Entrega</dt>
                        <dd class="col-sm-8">@Model.FechaEntrega.ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-4">Cantidad Entregada</dt>
                        <dd class="col-sm-8">@Model.CantidadEntregada</dd>
                    </dl>
                </div>
            </div>
            <div class="d-flex justify-content-start mt-3">
                <a asp-action="Edit" asp-route-id="@Model.EntregaIndumentariaID" class="btn btn-warning me-4">Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver a la Lista</a>
                
            </div>
        </div>
    </div>
</div>

