@model AppIndumentaria.Models.EntregaIndumentaria

@{
    ViewData["Title"] = "Editar Entrega de Indumentaria";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">Editar Entrega de Indumentaria</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="EntregaIndumentariaID" />

                        <div class="mb-3">
                            <label asp-for="Empleado" class="form-label"></label>
                            <select asp-for="EmpleadoID" class="form-select" asp-items="@(ViewData["EmpleadoID"] as SelectList)"></select>
                            <span asp-validation-for="EmpleadoID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Indumentaria" class="form-label"></label>
                            <select asp-for="IndumentariaID" class="form-select" asp-items="@(ViewData["IndumentariaID"] as SelectList)"></select>
                            <span asp-validation-for="IndumentariaID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TalleID" class="form-label"></label>
                            <select asp-for="TalleID" class="form-select" asp-items="@(ViewData["TalleID"] as SelectList)"></select>
                            <span asp-validation-for="TalleID" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="FechaEntrega" class="form-label"></label>
                            <input asp-for="FechaEntrega" class="form-control" type="datetime-local" value="@Model.FechaEntrega.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="FechaEntrega" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CantidadEntregada" class="form-label"></label>
                            <input asp-for="CantidadEntregada" class="form-control" type="number" min="1" />
                            <span asp-validation-for="CantidadEntregada" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



