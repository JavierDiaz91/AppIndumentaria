@model AppIndumentaria.Models.EntregaIndumentaria

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Eliminar Entrega de Indumentaria</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Está seguro de que desea eliminar esta entrega de indumentaria?</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-3">Fecha de Entrega</dt>
                        <dd class="col-sm-9">@Model.FechaEntrega.ToShortDateString()</dd>

                        <dt class="col-sm-3">Empleado</dt>
                        <dd class="col-sm-9">@Model.Empleado.EmpleadoID</dd>

                        <dt class="col-sm-3">Indumentaria</dt>
                        <dd class="col-sm-9">@Model.Indumentaria.IndumentariaID</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="EntregaIndumentariaID" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver al Listado</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

