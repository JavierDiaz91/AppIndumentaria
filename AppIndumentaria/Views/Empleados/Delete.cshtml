@model AppIndumentaria.Models.Empleado

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Eliminar Empleado</h3>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Está seguro de que desea eliminar este empleado?</h5>
                    <dl class="row mt-3">
                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>

                        <dt class="col-sm-3">Apellido</dt>
                        <dd class="col-sm-9">@Model.Apellido</dd>

                        <dt class="col-sm-3">Puesto</dt>
                        <dd class="col-sm-9">@Model.Puesto</dd>

                        <dt class="col-sm-3">Fecha de Ingreso</dt>
                        <dd class="col-sm-9">@Model.FechaIngreso.ToShortDateString()</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="EmpleadoID" />
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver a la Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
