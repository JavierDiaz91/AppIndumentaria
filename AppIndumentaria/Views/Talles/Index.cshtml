@model IEnumerable<AppIndumentaria.Models.Talle>

@{
    ViewData["Title"] = "Lista de Talles";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-secondary" style="font-family: Fellix, serif;">Lista de Talles</h3>
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4">
            <i class="fas fa-plus-circle me-2"></i> Crear un Talle
        </a>
    </div>

    <div class="row g-4">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <i class="fas fa-exclamation-circle"></i> No hay talles registrados.
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card shadow-sm h-100 border-0">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title fw-bold text-primary" style="font-family: Fellix, serif;">@item.Nombre</h5>
                            <div class="d-flex mt-3">
                                
                                <a asp-action="Details" asp-route-id="@item.TalleID" class="btn btn-sm btn-outline-info me-2 shadow-sm flex-fill rounded-pill">
                                    <i class="fas fa-info-circle"></i> Detalles
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TalleID" class="btn btn-sm btn-outline-danger shadow-sm flex-fill rounded-pill">
                                    <i class="fas fa-trash"></i> Eliminar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>



