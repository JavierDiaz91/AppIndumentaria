@model IEnumerable<AppIndumentaria.Models.ParticipacionCapacitacion>

@{
    ViewData["Title"] = "Capacitaciones a Empleados";
}

<div class="container mt-4">
    <!-- Encabezado y Botón para Crear Nueva Participación -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-secondary" style="font-family: Fellix, serif;">Capacitaciones a Empleados</h3>
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-pill px-4" title="Agregar Nueva Participación">
            <i class="fas fa-plus-circle me-2"></i>Nuevo
        </a>
    </div>

    <!-- Tarjeta Contenedora de la Tabla -->
    <div class="card shadow border-0 mb-4">
        <div class="card-header bg-primary text-white d-flex align-items-center justify-content-between">
            <h5 class="mb-0" style="font-family: Fellix, serif;">Participaciones Registradas</h5>
            <!-- Campo de Búsqueda -->
            <form method="get" class="input-group w-25">
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar..." aria-label="Buscar Participación">
                <button class="btn btn-light" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>
        </div>
        <div class="card-body p-0">
            <!-- Tabla de Participaciones -->
            <div class="table-responsive">
                <table class="table table-borderless align-middle">
                    <thead class="bg-light text-secondary" style="font-size: 0.9rem;">
                        <tr>
                            <th>Fecha de Participación</th>
                            <th>Estado</th>
                            <th>Empleado</th>
                            <th>Capacitación</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-exclamation-circle"></i> No hay participaciones registradas.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="bg-white shadow-sm mb-2 rounded">
                                    <td class="ps-4">@item.FechaParticipacion.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                                    <td>@item.Empleado.Nombre @item.Empleado.Apellido</td>
                                    <td>@item.Capacitacion.Titulo</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center">
                                            <a asp-action="Edit" asp-route-id="@item.ParticipacionCapacitacionID" class="btn btn-sm btn-outline-warning me-2 shadow-sm rounded-pill">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.ParticipacionCapacitacionID" class="btn btn-sm btn-outline-info me-2 shadow-sm rounded-pill">
                                                <i class="fas fa-info-circle"></i> Detalles
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ParticipacionCapacitacionID" class="btn btn-sm btn-outline-danger shadow-sm rounded-pill">
                                                <i class="fas fa-trash"></i> Eliminar
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
