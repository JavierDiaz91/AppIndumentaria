@model AppIndumentaria.Models.ParticipacionCapacitacion

@{
    ViewData["Title"] = "Crear Participación en Capacitación";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #1E3250; color: white;">
                    <h3 class="mb-0">Crear Participación en Capacitación</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="EmpleadoID" class="form-label">Empleado</label>
                            <select asp-for="EmpleadoID" class="form-select" asp-items="ViewBag.EmpleadoID"></select>
                            <span asp-validation-for="EmpleadoID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="CapacitacionID" class="form-label">Capacitación</label>
                            <select asp-for="CapacitacionID" class="form-select" asp-items="ViewBag.CapacitacionID"></select>
                            <span asp-validation-for="CapacitacionID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FechaParticipacion" class="form-label">Fecha de Participación</label>
                            <input asp-for="FechaParticipacion" class="form-control" type="datetime-local"
                                   value="@(Model?.FechaParticipacion != DateTime.MinValue ? Model.FechaParticipacion.ToString("yyyy-MM-ddTHH:mm") : "")" />
                            <span asp-validation-for="FechaParticipacion" class="text-danger"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label">Estado</label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


