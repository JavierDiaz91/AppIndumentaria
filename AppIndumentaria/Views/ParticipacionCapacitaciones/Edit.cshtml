@model AppIndumentaria.Models.ParticipacionCapacitacion

@{
    ViewData["Title"] = "Editar Participación en Capacitación";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #1E3250; color: white;">
                    <h3 class="mb-0">Editar Participación en Capacitación</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ParticipacionCapacitacionID" />
                        <div class="mb-3">
                            <label asp-for="EmpleadoID" class="form-label"></label>
                            <select asp-for="EmpleadoID" class="form-select" asp-items="@(ViewData["EmpleadoID"] as SelectList)"></select>
                            <span asp-validation-for="EmpleadoID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CapacitacionID" class="form-label"></label>
                            <select asp-for="CapacitacionID" class="form-select" asp-items="@(ViewData["CapacitacionID"] as SelectList)"></select>
                            <span asp-validation-for="CapacitacionID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="FechaParticipacion" class="form-label"></label>
                            <input asp-for="FechaParticipacion" class="form-control" type="datetime-local" value="@Model.FechaParticipacion.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="FechaParticipacion" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label"></label>
                            <input asp-for="Estado" class="form-control" />
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

