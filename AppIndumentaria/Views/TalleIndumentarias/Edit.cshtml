@model AppIndumentaria.Models.TalleIndumentaria

@{
    ViewData["Title"] = "Editar Talle de Indumentaria";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header" style="background-color: #1E3250; color: white;">
                    <h3 class="mb-0">Editar Talle de Indumentaria</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <!-- ID del TalleIndumentaria para identificar el registro -->
                        <input type="hidden" asp-for="TalleIndumentariaID" />
                        <input type="hidden" asp-for="IndumentariaID" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Selección de Talle -->
                        <div class="mb-3">
                            <label asp-for="TalleID" class="form-label">Talle</label>
                            <select asp-for="TalleID" class="form-select" asp-items="ViewBag.TalleID"></select>
                            <span asp-validation-for="TalleID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CantidadDisponible" class="form-label">Cantidad Disponible</label>
                            <input asp-for="CantidadDisponible" class="form-control" type="number" min="1" />
                            <span asp-validation-for="CantidadDisponible" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver al Listado</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




